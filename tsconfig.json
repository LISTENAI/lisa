{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es2017",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/**",
    "./node_modules/@types/node/index.d.ts",
    "./node_modules/**/*.d.ts",
  ]
}
